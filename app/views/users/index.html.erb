<% users_with_requested_skill = [] %>
<% @users.each do |user| %>
  <% next if user == current_user %>
  <% user.skills.each do |skill| %>
    <% if skill.id == @request.skill_id %>
      <% users_with_requested_skill << user %>
    <% end %>
  <% end %>
<% end %>

<% skills_combined = [] %>
<div class="mt-4 row mx-auto col-12 col-md-6">
  <div class="card-body d-flex align-items-center">
      <%= simple_form_for @request do |f| %>
        <% users_with_requested_skill.each do |user| %>

          <div class="one-card">

              <label>
                <%= check_box_tag 'request[user_ids][]', user.id %>
                <div class="user-name">
                  <%= user.username %>
                </div>

                <div class="skills-container">
                  <% user.skills.each do |skill| %> <!-- Correction ici -->
                    <div class="skillz"><%= skill.category %></div>
                  <% end %>
                </div>
              </label>
          </div>
            <% end %>



        <%= hidden_field_tag 'triggered_by_needer', 'true' %>
        <%= f.button :submit, 'Envoyez votre requÃªte', class:"btn btn-primary btn-margin" %>
      <% end %>
  </div>
</div>
