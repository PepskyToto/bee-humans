<% @requests.sort_by { |request| request.distance_to_user(current_user) }.each do |request| %>
  <div class="card mt-4">
    <div class="card-body d-flex align-items-center">
      <div class="user-rating me-3" style="width: 80px;"> <!-- Ajout de style pour limiter la largeur -->
        <%= link_to user_path(request.user), class: "text-decoration-none text-dark" do %>
          <% if request.user.average_rating %>
            <div class="average-rating-bubble">
              <%= request.user.average_rating %>
            </div>
          <% else %>
            <p>Cet utilisateur n'a pas encore d'avis</p>
          <% end %>
        <% end %>
      </div>

      <div class="request-info col-8"> <!-- Utilisation de col-8 pour rÃ©server 8 colonnes pour les informations de la demande -->
        <%= link_to request_path(request), class: "text-decoration-none text-dark" do %>
          <h5 class="card-title"><%= request.title %></h5>
          <p class="card-text"><strong>Type:</strong> <span style="color: #6b0f45;"><%= request.skill.category %></span></p>
          <p class="card-text"><%= request.description %></p>
          <p class="card-text"><strong>Posted by:</strong> <%= request.user.username %></p>
          <p class="card-text"><strong>Date:</strong> <%= request.created_at.strftime('%B %e, %Y %l:%M %p') %></p>
          <p class="card-text"><strong>Location:</strong> <%= request.address %></p>
          <% if current_user.latitude && current_user.longitude %>
            <% distance = request.distance_to_user(current_user) %>
          <% if distance %>
            <p class="card-text"><strong>Distance:</strong> <%= distance.round(2) %> km</p>
          <% end %>
        <% end %>

        </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
