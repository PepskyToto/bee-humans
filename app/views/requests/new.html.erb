<% if current_user.pollen > 0 %>
<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-8 col-sm-6 form-request">
<%= simple_form_for @request, html: { class: "mt-3" } do |form| %>
  <% @skills = Skill.all %>
  <%= form.input :title, label: "Title" %>
  <%= form.input :skill, collection: Skill.all, label_method: :category, value_method: :id, prompt: 'Sélectionner une compétence' %>
  <%= form.input :description, label: "Description" %>
  <%= form.file_field :photo, label: 'Télécharger une photo' %>



        <div class="row">
          <%= form.button :submit, "Envoyer votre recherche", class: "resa-button btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% else %>
<%= render "shared/no_pollen" %>
<% end %>